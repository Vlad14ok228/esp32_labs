// --- Налаштування пінів ---
const int sensorPin = 4;     /* Аналоговий вхід для фоторезистора (GPIO 4) */

// --- Змінні ---
int LDR_Val = 0;             /* Змінна для збереження значення фоторезистора */

void setup() {
    // Налаштування серійного порту для виводу даних на комп'ютер
    // Швидкість 115200 (або 9600, як вам зручніше)
    Serial.begin(115200);     
}

void loop() {
    // 1. Зчитуємо аналогове значення з фоторезистора
    // ESP32 повертає значення від 0 (темрява) до 4095 (яскраве світло)
    // (Або навпаки, залежно від того, як ви підключили резистор і фоторезистор)
    LDR_Val = analogRead(sensorPin);   

    // 2. Виводимо результат у Монітор порту
    Serial.print("Значення фоторезистора: ");
    Serial.println(LDR_Val);   

    // 3. Затримка 1 секунда перед наступним заміром
    delay(1000);     
}